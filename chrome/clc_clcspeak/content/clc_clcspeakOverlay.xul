<overlay id="clc_clcspeakOverlay" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_globals.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_TTSEngineConfig.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_autoRead.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_currentAtomicObjAdjust.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_misc.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_mouseclickHandler.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_sentenceReading.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_spCSSFunc.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_windowAdjust.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_interface.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_preferences.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_prefUI.js" />
  <script type="application/x-javascript" src="chrome://clc_clcspeak/content/clc_cs_prefUI_events.js" />

  <script type="application/x-javascript">
      window.addEventListener("pageshow",CLC_CS_Init,true);         //initializes the system
      window.addEventListener("close",CLC_CS_StopSpeaking,true);    //stop speaking when moving on
  </script>


<!-- Right Click Context Menu -->
<popup id="contentAreaContextMenu">
	<menuseparator/>
	<menuitem label="&clc_clcspeak.menuitem.cl0;" class="menuitem-iconic" id="clc-clickspeak-speak-menuitem" oncommand="CLC_CS_SpeakSelection();"/>
	<menuitem label="&clc_clcspeak.menuitem.cl1;" class="menuitem-iconic" id="clc-clickspeak-auto-menuitem" oncommand="CLC_CS_SpeakPage();"/>
	<menuitem label="&clc_clcspeak.menuitem.cl2;" class="menuitem-iconic" id="clc-clickspeak-stop-menuitem" oncommand="CLC_CS_StopSpeaking();"/>     
</popup>
<!-- [END] Right Click Context Menu -->


