<!-- Individual buttons to drag and drop for customizing a toolbar -->
<toolbarpalette id="BrowserToolbarPalette">
   <toolbarbutton id="clc-clickspeak-speak-button" 
      class="toolbarbutton-1"
      label="&clc_clcspeak.menuitem.cl0;"
      tooltiptext="&clc_clcspeak.tooltip.speak;"
      onclick="CLC_CS_SpeakSelection();"/>
   <toolbarbutton id="clc-clickspeak-auto-button" 
      class="toolbarbutton-1"
      label="&clc_clcspeak.menuitem.cl1;"
      tooltiptext="&clc_clcspeak.tooltip.auto;"
      onclick="CLC_CS_SpeakPage();"/>
   <toolbarbutton id="clc-clickspeak-stop-button" 
      class="toolbarbutton-1"
      label="&clc_clcspeak.menuitem.cl2;"
      tooltiptext="&clc_clcspeak.tooltip.stop;"
      onclick="CLC_CS_StopSpeaking();"/>

   <!-- These are the same as above, but they are for the extra large version -->
   <toolbarbutton id="clc-clickspeak-speak-exlarge-button" 
      class="toolbarbutton-1"
      label="&clc_clcspeak.menuitem.cl0;"
      tooltiptext="&clc_clcspeak.tooltip.speak;"
      onclick="CLC_CS_SpeakSelection();"/>
   <toolbarbutton id="clc-clickspeak-auto-exlarge-button" 
      class="toolbarbutton-1"
      label="&clc_clcspeak.menuitem.cl1;"
      tooltiptext="&clc_clcspeak.tooltip.auto;"
      onclick="CLC_CS_SpeakPage();"/>
   <toolbarbutton id="clc-clickspeak-stop-exlarge-button" 
      class="toolbarbutton-1"
      label="&clc_clcspeak.menuitem.cl2;"
      tooltiptext="&clc_clcspeak.tooltip.stop;"
      onclick="CLC_CS_StopSpeaking();"/>
</toolbarpalette>
<!-- [END] Individual buttons to drag and drop for customizing a toolbar -->


<!-- The CLiCk, Speak Toolbar -->
<toolbox id="navigator-toolbox" context="toolbar-context-menu">
	<toolbar id="clcspeak-toolbar"
		context="toolbar-context-menu" 
		customizable="true" 
		collapsed="false" persist="collapsed"
		toolbarname="&clc_clcspeak.toolbar.cl10;"
		class="chromeclass">			
		<hbox align="center" flex="2">
			<toolbarbutton id="clc-clickspeak-speak-button" 
      			class="toolbarbutton-1"
      			label="&clc_clcspeak.toolbarbut11;"
                        tooltiptext="&clc_clcspeak.tooltip.speak;"
      			onclick="CLC_CS_SpeakSelection();"/>
      		<toolbarbutton id="clc-clickspeak-auto-button" 
      			class="toolbarbutton-1"
      			label="&clc_clcspeak.toolbarbut12;"
                        tooltiptext="&clc_clcspeak.tooltip.auto;"
      			onclick="CLC_CS_SpeakPage();"/>
      		<toolbarbutton id="clc-clickspeak-stop-button" 
      			class="toolbarbutton-1"
      			label="&clc_clcspeak.toolbarbut13;"
                        tooltiptext="&clc_clcspeak.tooltip.stop;"
      			onclick="CLC_CS_StopSpeaking();"/>
      	</hbox>
	</toolbar>
</toolbox>
<!-- [END] The CLiCk, Speak Toolbar -->




</overlay>
